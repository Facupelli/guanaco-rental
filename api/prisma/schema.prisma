// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String        @default(cuid()) @id
  phone                   String?       @unique
  email                   String        @unique
  orders                  Order[]
  dni                     String[]
  birthDate               DateTime?
  address                 String?
  addressLocation         String?
  addressProvince         String?
  occupation              String?
  student                 Boolean?
  employee                Boolean?
  company                 String?
  cuit                    String?
  bussinessName           String?
  customerAproved         Boolean?
  customerAprovedAt       DateTime?
  createdAt               DateTime      @default(now()) @map(name: "created_at")
  updatedAt               DateTime      @updatedAt @map(name: "updated_at")
  @@map(name: "users")
}

model Category {
  id                      String       @default(cuid()) @id
  name                    String
  equipments              Equipment[]
}

model Equipment {
  id                      String      @default(cuid()) @id
  name                    String
  brand                   String
  model                   String
  stock                   Int         @default(1)
  price                   Int
  category                Category    @relation(fields: [categoryId], references: [id])
  categoryId              String
  orders                  Order[]
  owner                   String      @default("Giaccaglia")
  location                String      @default("San Juan")
  bookings                BookOnEquipment[]
}

model Order {
  id                      String       @default(cuid()) @id
  user                    User         @relation(fields: [userId], references: [id])
  userId                  String
  equipments              Equipment[]
  totalPrice              Int
  dates                   String[]
  booking                 Book          @relation(fields: [bookingId], references: [id])
  bookingId               String        @unique
  createdAt               DateTime      @default(now())
}

model Book {
  id                      String                @default(cuid()) @id
  dates                   String[]
  equipments              BookOnEquipment[]
  order                   Order?
}

model BookOnEquipment {
  equipment               Equipment          @relation(fields: [equipmentId], references: [id])
  equipmentId             String 
  book                    Book               @relation(fields: [bookId], references: [id])
  bookId                  String 
  quantity                Int
  assignedAt              DateTime            @default(now())

  @@id([equipmentId, bookId])
}

